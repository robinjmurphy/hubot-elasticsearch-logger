{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "quotes": [2, "single"],
    "eqeqeq": 2,
    "no-var": 2,
    "semi": 2,
    "strict": [2, "global"],
    "arrow-parens": 2,
    "prefer-arrow-callback": 2,
    "object-shorthand": 2
  }
}
